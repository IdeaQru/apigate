{
  "name": "serial-udp-forwarder",
  "version": "2.0.0",
  "description": "Forward data from serial port or IP:port to custom UDP port with CSV database",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop serial-udp-forwarder",
    "pm2:restart": "pm2 restart serial-udp-forwarder",
    "pm2:logs": "pm2 logs serial-udp-forwarder",
    
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "serialport": "^10.5.0",
    "express": "^4.18.2",
    "dgram": "^1.0.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "fs-extra": "^11.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}